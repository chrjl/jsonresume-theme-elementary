{{#if resume.experience.length}}
<section id='experience'>
  <h2>Experience</h2>

  {{#each resume.experience}}
  {{> work-details}}

  {{#if categories.length}}
  <div class="horizontal-description-container">
    {{#each categories}}
    <div class="horizontal-description">
      <div class="name">
        {{name}}
      </div>

      {{#if keywords.length}}
      <div class="keywords">
        {{#each keywords}}
        {{{this}}}{{#if @last}}{{else}}<br>{{/if}}
        {{/each}}
      </div>
      {{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{/each}}
</section>
{{/if}}